<!DOCTYPE html>
<html>
  <head>
    <title>Me-Cube</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if logged_in? %>
      <script id="important-info"> window.currentUser=<%= render("api/users/user.json.jbuilder", user: current_user).html_safe%> </script>
    <% end %>
    <script> 
      window.meCubeLogo = "<%= image_url("sitelogo.png")%>" 
    </script>
  </head>
  <body>
    <%= yield %>
  </body>
</html>
